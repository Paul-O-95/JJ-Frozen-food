<section class="text-center">
  <div>
    <h1>
      JJ FROZEN FOOD
    </h1>
    <p style="font-size: 15px;">BUY YOUR FOOD STUFF &amp; FROZEN FOODS HERE</p>
    <p style="font-size: 15px;" class="opening-time"></p>
    <button style="font-size: 18px;" class="get-quote btn-createModal" title="Get Quote">GET QUOTE</button>
  </div>
  <div class="frozen-fish">
    <img src="../public/images/FROZEN-FOODS-BUSINESS-PLAN-IN-NIGERIA-1024x474.jpg" alt="frozen-fish"
      style="width:1000px;">
  </div>

  {{!-- Get quote Modal --}}
  <div class="modal" style="font-family: Georgia, 'Times New Roman', Times, serif;" id="quoteModal" tabindex="-1"
    role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        ​
        <div class="modal-header text-left navbar-default">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel2">Get quote</h4>
        </div>
        ​
        <div class="modal-body">
          <form method="post" action="/quote" class="form-horizontal" role="form" id="quoteForm">
            <div class="form-group">
              <div class="col-sm-12">
                <input name="name" type="input" class="form-control input" placeholder="Name">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <input name="phone" type="input" class="form-control input" placeholder="Phone number">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <input name="email" type="input" class="form-control input" placeholder="Email" required>
                <p class="text-left" style="font-size:11px;margin-top:5px;">&#42;Valid email address required</p>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-7">
                <p class="text-left" style="font-size:12px;">How can we help you?</p>
                <textarea name="request" class="input" cols="78" type="input"
                  placeholder="I was wondering about availability and rates. I need help with the following:"></textarea>
              </div>
            </div>
            <div class="form-group text-right">
              <div class="col-sm-12">
                <button type="submit" class="submit-button">Submit</button>
              </div>
            </div>
          </form>
        </div>
        ​
      </div><!-- modal-content -->
    </div><!-- modal-dialog -->
  </div><!-- modal -->
</section>


{{!-- Review Modal --}}
<div class="modal fade-scale" style="font-family: Georgia, 'Times New Roman', Times, serif;" id="reviewModal"
  tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      ​
      <div class="modal-header text-left navbar-default">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel2">Did you enjoy JJ frozen food?</h4>
      </div>
      ​
      <div class="modal-body review-modal-body">
        <form method="post" action="/review" class="form-horizontal review-modal-form" role="form" id="reviewForm">
          <div class="form-group">
            <div class="rate" name="">
              <h4>Rate our service</h4>
              <input type="radio" id="star5" name="rating" value="5" />
              <label for="star5" title="text">5 stars</label>
              <input type="radio" id="star4" name="rating" value="4" />
              <label for="star4" title="text">4 stars</label>
              <input type="radio" id="star3" name="rating" value="3" />
              <label for="star3" title="text">3 stars</label>
              <input type="radio" id="star2" name="rating" value="2" />
              <label for="star2" title="text">2 stars</label>
              <input type="radio" id="star1" name="rating" value="1" />
              <label for="star1" title="text">1 star</label>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 ">
              <textarea name="testimonial" class="form-control input1"
                placeholder="Describe your experience with JJ"></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10">
              <input type="input" name="name" class="form-control input1" placeholder="Name" required>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <button type="submit" class="submit-button">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div><!-- modal-content -->
  </div><!-- modal-dialog -->
</div><!-- modal -->
</section>



